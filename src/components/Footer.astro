---
import { Icon } from "astro-icon"

const d = new Date()
const currentYear = d.getFullYear()

import { Constance } from "../helpers/constance"
import Text from "./Ui/Text.astro"
---

<footer class="mt-32 py-10 space-y-5 grid justify-center text-center">
	<Text content={Constance.footer.slug} moClass="font-semibold text-sm" />

	<div class="flex justify-center space-x-5">
		{
			Constance.socialData.map((item) => (
				<a
					href={item.link}
					title={`Visit ${item.name}`}
					class="hover:text-emerald-400 transition-colors duration-500 "
					target="_blank"
				>
					<Icon name={item.icons} />
				</a>
			))
		}
	</div>

	<p class="text-xs">
		Copyright Â© {currentYear}
		<a href="/"> {Constance.siteData.owner}</a>
	</p>
</footer>

<style>
	[astro-icon] {
		height: 26px;
	}
