---
// Making import statements here
import BaseLayout from "../layouts/BaseLayout.astro"
import "../styles/global.css"
import { Constance } from "../helpers/constance"

import Text from "../components/Ui/Text.astro"

// We are creating our variables with const or let
const pageTitle = "About " + Constance.siteData.firstName + "❓"
---

<BaseLayout pageTitle={pageTitle}>
	<div class="my-12 flex flex-col items-center space-y-14">
		<Text
			content={Constance.siteData.bio.aboutMeIntro}
			moClass={"w-1/2 text-center"}
		/>
		<Text
			content={Constance.siteData.bio.aboutMe}
			moClass={"w-1/2 text-center"}
		/>

		<Text
			content={Constance.siteData.bio.aboutAchievement}
			moClass={"w-1/2 text-center"}
		/>
		<a href="#" target="_blank" class="bg-emerald-400 px-2 py-1 rounded"
			>Check it Out 👈</a
		>
	</div>
</BaseLayout>
