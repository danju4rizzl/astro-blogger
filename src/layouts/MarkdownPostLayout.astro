---
// ℹ️ This file is post layout ONLY
import BaseLayout from "./BaseLayout.astro"
const { frontmatter } = Astro.props
---

<!-- We are using the BaseLayout to add the same style to the post page with a diffrent template -->
<BaseLayout pageTitle={frontmatter.title}>
	<p>Published on: {frontmatter.pubDate.slice(0, 10)}</p>
	<p>Written by 👉 {frontmatter.author}!</p>
	<p><em>{frontmatter.description}</em></p>
	<img
		src={frontmatter.image.url}
		alt={frontmatter.image.alt}
		width="80px"
		style="border-radius: 50%;"
	/>
	<slot />
	<div class="">
		<h6>Post Tags:</h6>
		<ul>
			{frontmatter.tags.map((tag) => <li>{tag}</li>)}
		</ul>
	</div>
</BaseLayout>
